{% extends 'Layout.html.twig' %}

{% block body %}
        <section class="bg-dark-30 showcase-page-header module parallax-bg" data-background="{{ asset('bundles/index2.jpg') }}" >
                <div class="titan-caption">
                        <div class="caption-content">
                                <div class="font-alt mb-40 titan-title-size-4">100+ Fruits & Vegetables</div><a class="section-scroll btn btn-border-w btn-round" href="{{  path("offre_index") }}">Command now</a>
                        </div>
                </div>
        </section>
        <br><br><br>
<div class="main">

        <div class="container">
                <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
<h3>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form.quantity,  {'attr': {'class': 'form-control input-lg' , 'placeholder': 'quantity in kGs'}} ) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.produit,  {'attr': {'class': 'form-control input-lg' }} ) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.gouv,  {'attr': {'class': 'form-control input-lg' }} ) }}
        </div>
        <div class="form-group " style="text-align: center">
                <input type="submit" id="ajouter" name="ajouter" class="btn btn-black" value="Ajouter">
        </div>
        <br><br>
    {{ form_end(form) }}
</h3>
                        </div>
                </div>
        </div>


</div>
{% endblock %}
